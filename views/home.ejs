<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script defer src="js/app.js"></script>
    <link rel="stylesheet" href="styles/main.css" />
    <title>Survey form</title>
    <link rel="icon" href="/images/form.ico" />
  </head>
  <body>
    <div class="page-container">
      <div class="quiz-container d-flex flex-column align-items-center">
        <span>Number of questions</span>
        <input
          type="number"
          name="questions"
          id="questions"
          class="form-control mt-4 question-amount-input"
        />
        <button class="btn btn-success btn-question mt-4">
          Set number of questions
        </button>
      </div>
      <div class="reset-btn-container">
        <button class="reset-btn btn btn-danger mx-4">Reset</button>
      </div>
      <div class="session-table-container mt-3 mx-4">
        <%- include('components/sessionTable.ejs') %>
      </div>
      <div class="survey-table-container mt-5 mx-4">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Survey Token</th>
              <th>Question</th>
              <th>Answer</th>
              <th>Answer Date</th>
            </tr>
          </thead>
          <tbody>
            <% surveys.forEach(function(survey) { %>
            <tr>
              <td><%= survey.survey_token %></td>
              <td><%= survey.question %></td>
              <td><%= survey.answer %></td>
              <td><%= survey.answer_date %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <button class="btn btn-secondary truncate-btn">Truncate table</button>
      </div>
    </div>
  </body>
</html>
